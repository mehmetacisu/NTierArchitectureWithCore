@model Demo_Product.Models.UserEditViewModel
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1>Profilimi Güncelle</h1>

<form method="post">
	@Html.Label("Adınız")
	<input type="text" asp-for="Name" class="form-control mb-2" />

	@Html.Label("Soyadınız")
	<input type="text" asp-for="SurName" class="form-control mb-2" />

	@Html.Label("Mail Adresiniz")
	<input type="text" asp-for="Mail" class="form-control mb-2" />

	@Html.Label("Cinsiyet")
	<input type="text" asp-for="Gender" class="form-control mb-2" />

	@Html.Label("Şifre")
	<input type="text" asp-for="Password" class="form-control mb-2" />

	
	@Html.Label("Şifre Tekrar")
	<input type="text" asp-for="ConfirmPassword" class="form-control mb-2" />

	<button class="btn btn-warning">Kaydet</button>
</form>

