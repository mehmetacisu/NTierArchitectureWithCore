@model EntityLayer.Concrete.Customer


@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1 class="text-center">Müşteri Ekleme Formu</h1>

<form method="post">
	@Html.Label("Müşteri Adı")
	@Html.TextBoxFor(x=>x.Name,new{@class="form-control mb-2"})

	@Html.Label("Müşteri Şehir")
	@Html.TextBoxFor(x=>x.City,new {@class="form-control mb-2"})

	@Html.Label("Meslek Seçiniz")
	@Html.DropDownListFor(x=>x.JobID,(List<SelectListItem>)ViewBag.job,
	new {@class="form-control mb-2"})

	<button class="btn btn-success">Ekle</button>
</form>


